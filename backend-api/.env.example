# Environment Variables for LLM Response Quality Analyzer Backend

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration (Use one of the following)
# For PostgreSQL
DB_DIALECT=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=llm_analyzer
DB_USER=your_postgres_username
DB_PASSWORD=your_postgres_password

# For MySQL
# DB_DIALECT=mysql
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=llm_analyzer
# DB_USER=your_mysql_username
# DB_PASSWORD=your_mysql_password

# Alternative: Full Database URL
# DATABASE_URL=postgres://user:password@localhost:5432/llm_analyzer

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# JWT Secret (for future authentication)
JWT_SECRET=your_super_secret_jwt_key_here

# OpenAI API Configuration (for future integration)
OPENAI_API_KEY=your_openai_api_key_here

# Mock Mode (set to true to use mock responses)
USE_MOCK_RESPONSES=true

# Logging
LOG_LEVEL=info
